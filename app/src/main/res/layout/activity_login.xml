<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.simongenin.unbunker.activities.LoginActivity"

    android:background="@color/dark_blue"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_layout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher"
            android:layout_marginRight="5dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bunker"
                android:id="@+id/title_main"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Last Minute"
                android:id="@+id/title_last_minute"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="-10dp"
                android:gravity="right"

                />
        </LinearLayout>

    </LinearLayout>

       <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_edt"
        android:hint="Prénom"
        android:layout_below="@+id/v_layout"
        android:inputType="textPersonName"
        android:layout_marginTop="35dp"
        android:textColorHint="@color/light_grey"
        android:textColor="@color/white"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_edt"
        android:layout_below="@+id/nickname_edt"
        android:layout_centerHorizontal="true"
        android:hint="Nom"
        android:inputType="textPersonName"
        android:textColorHint="@color/light_grey"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mdp_edt"
        android:layout_below="@+id/name_edt"
        android:layout_centerHorizontal="true"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColorHint="@color/light_grey"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        android:id="@+id/login_button"
        android:layout_below="@+id/mdp_edt"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="35dp"
        android:textColor="@color/white"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creer un compte"
        android:id="@+id/signup_text"
        android:textSize="20sp"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="@color/light_grey"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créé par Simon Genin"
        android:id="@+id/copyright"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="@color/light_grey"
        />


</RelativeLayout>

 </ScrollView>