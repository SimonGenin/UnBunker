<?xml version="1.0" encoding="utf-8"?>

<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@android:color/transparent"
                    >

<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/tale_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname Name"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many times ago"
        android:id="@+id/times_ago"
        android:layout_below="@id/name"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:textSize="13sp"
        android:textColor="@color/light_grey"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/role_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMINISTRATEUR"
        android:layout_below="@id/times_ago"
        android:textSize="10dp"
        android:textStyle="bold"
        android:background="@drawable/role_admin_bg"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
    />

    <TextView
        android:id="@+id/role_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPPEUR"
        android:layout_below="@id/times_ago"
        android:layout_toRightOf="@id/role_admin"
        android:textSize="10dp"
        android:background="@drawable/role_dev_bg"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/role_prio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIORITAIRE"
        android:layout_below="@id/times_ago"
        android:textSize="10dp"
        android:background="@drawable/role_prioritaire_bg"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        />

</RelativeLayout>

</LinearLayout>