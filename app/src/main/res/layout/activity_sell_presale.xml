<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.simongenin.unbunker.activities.SellPresaleActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bunker Info"
        android:id="@+id/bunker_name_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combien de prÃ©ventes voulez vous vendre ?"
        android:id="@+id/how_many_text"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/bunker_name_text"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/presales_seeked_number"
        android:textSize="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/how_many_text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>


    <SeekBar
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/seekBar_presales"
        android:layout_below="@+id/presales_seeked_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vendre"
        android:id="@+id/sell_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendre plus ? Click ici."
        android:id="@+id/sell_more_text"
        android:layout_below="@+id/seekBar_presales"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"/>

</RelativeLayout>
